<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pay.client.dao.StockDao">

    <resultMap type="com.pay.client.entity.Stock" id="StockMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="num" column="num" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="StockMap">
        select
          id, num
        from mall.stock
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="StockMap">
        select
          id, num
        from mall.stock
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="StockMap">
        select
          id, num
        from mall.stock
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="num != null">
                and num = #{num}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into mall.stock(num)
        values (#{num})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mall.stock
        set num = num - 1
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mall.stock where id = #{id}
    </delete>

</mapper>