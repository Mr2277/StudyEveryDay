<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.consumer.dao.RocketmessageDao">

    <resultMap type="com.example.consumer.entity.Rocketmessage" id="RocketmessageMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="topic" column="topic" jdbcType="VARCHAR"/>
        <result property="tags" column="tags" jdbcType="VARCHAR"/>
        <result property="keys" column="keys" jdbcType="VARCHAR"/>
        <result property="msg" column="msg" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="RocketmessageMap">
        select
          id, topic, tags, keys, msg
        from mall.rocketMessage
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="RocketmessageMap">
        select
          id, topic, tags, keys, msg
        from mall.rocketMessage
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="RocketmessageMap">
        select
          id, topic, tags, keys, msg
        from mall.rocketMessage
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="topic != null and topic != ''">
                and topic = #{topic}
            </if>
            <if test="tags != null and tags != ''">
                and tags = #{tags}
            </if>
            <if test="keys != null and keys != ''">
                and keys = #{keys}
            </if>
            <if test="msg != null and msg != ''">
                and msg = #{msg}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into mall.rocketMessage(topic, tags, keys, msg)
        values (#{topic}, #{tags}, #{keys}, #{msg})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mall.rocketMessage
        <set>
            <if test="topic != null and topic != ''">
                topic = #{topic},
            </if>
            <if test="tags != null and tags != ''">
                tags = #{tags},
            </if>
            <if test="keys != null and keys != ''">
                keys = #{keys},
            </if>
            <if test="msg != null and msg != ''">
                msg = #{msg},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mall.rocketMessage where id = #{id}
    </delete>

</mapper>