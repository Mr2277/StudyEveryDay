<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huawei.scheduled.dao.BtHisDao">

    <resultMap type="com.huawei.scheduled.entity.BtHis" id="BtHisMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="nextRunTime" column="next_run_time" jdbcType="VARCHAR"/>
        <result property="method" column="method" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BtHisMap">
        select
          id, next_run_time, method
        from mall.bt_his
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BtHisMap">
        select
          id, next_run_time, method
        from mall.bt_his
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BtHisMap">
        select
          id, next_run_time, method
        from mall.bt_his
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="nextRunTime != null and nextRunTime != ''">
                and next_run_time = #{nextRunTime}
            </if>
            <if test="method != null and method != ''">
                and method = #{method}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into mall.bt_his(next_run_time, method)
        values (#{nextRunTime}, #{method})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mall.bt_his
        <set>
            <if test="nextRunTime != null and nextRunTime != ''">
                next_run_time = #{nextRunTime},
            </if>
            <if test="method != null and method != ''">
                method = #{method},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mall.bt_his where id = #{id}
    </delete>

</mapper>